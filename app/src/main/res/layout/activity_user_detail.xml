<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    tools:context=".UserDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:layout_alignParentTop="true"
        app:titleTextColor="@color/md_white_1000"
        app:subtitleTextColor="@color/md_white_1000"
        android:background="@color/primary_dark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:minHeight="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/toolbarlogo"
            tools:ignore="ContentDescription">
        </ImageView>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:paddingBottom="10dp"
                android:background="@color/md_white_1000">

                <ImageView
                    android:id="@+id/headerLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/zaal_logo_trans"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription">
                </ImageView>

                <TextView
                    android:id="@+id/headerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headerLogo"
                    android:text="Temuujin"
                    android:textColor="@color/md_black_1000"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText">
                </TextView>

                <TextView
                    android:id="@+id/headerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headerName"
                    android:text="roriau@gmail.com"
                    android:textColor="@color/md_grey_700"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textStyle="italic"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText">
                </TextView>

                <View
                    android:id="@+id/headerDivier"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/headerEmail"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_grey_300"
                    android:layout_marginBottom="10dp"> </View>

                <RelativeLayout
                    android:id="@+id/headerChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_below="@+id/headerDivier" >

                        <ImageView
                            android:id="@+id/passwordIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_lock"
                            android:layout_marginStart="30dp"
                            tools:ignore="ContentDescription"> </ImageView>

                        <TextView
                            android:id="@+id/password_change_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Нууц үг солих"
                            android:textColor="@color/md_grey_700"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@+id/passwordIcon"
                            android:layout_marginStart="30dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"> </TextView>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/md_grey_800"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_appintro_arrow_forward_white"
                            android:layout_marginEnd="30dp"
                            tools:ignore="ContentDescription"> </ImageView>

                </RelativeLayout>

                <View
                    android:id="@+id/listDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@+id/headerChangePassword"
                    tools:ignore="PxUsage"> </View>

                <RelativeLayout
                    android:id="@+id/headerOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listDivider" >

                        <ImageView
                            android:id="@+id/ordersIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/colorPrimaryDark"
                            android:src="@drawable/ic_shopping"
                            android:layout_marginStart="30dp"
                            tools:ignore="ContentDescription"> </ImageView>

                        <TextView
                            android:id="@+id/orders_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Миний захиалгууд"
                            android:textColor="@color/md_grey_700"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@+id/ordersIcon"
                            android:layout_marginStart="30dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"> </TextView>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:tint="@color/md_grey_800"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_appintro_arrow_forward_white"
                            android:layout_marginEnd="30dp"
                            tools:ignore="ContentDescription"> </ImageView>

                </RelativeLayout>

                <View
                    android:id="@+id/listDivider2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@+id/headerOrders"
                    tools:ignore="PxUsage"> </View>

                <RelativeLayout
                        android:id="@+id/headerHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/listDivider2" >

                    <ImageView
                        android:id="@+id/helpIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_help_black_24dp"
                        android:layout_marginStart="30dp"
                        tools:ignore="ContentDescription"> </ImageView>

                    <TextView
                        android:id="@+id/help_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тусламж"
                        android:textColor="@color/md_grey_700"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/helpIcon"
                        android:layout_marginStart="30dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"> </TextView>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/md_grey_800"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_appintro_arrow_forward_white"
                        android:layout_marginEnd="30dp"
                        tools:ignore="ContentDescription"> </ImageView>

                </RelativeLayout>


        <View
            android:id="@+id/listDivider3"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/headerHelp"
            tools:ignore="PxUsage"> </View>

        <RelativeLayout
            android:id="@+id/headerAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDivider3" >

            <ImageView
                android:id="@+id/aboutIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_info_black_24dp"
                android:layout_marginStart="30dp"
                tools:ignore="ContentDescription"> </ImageView>

            <TextView
                android:id="@+id/about_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бидний тухай"
                android:textColor="@color/md_grey_700"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/aboutIcon"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"> </TextView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/md_grey_800"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_appintro_arrow_forward_white"
                android:layout_marginEnd="30dp"
                tools:ignore="ContentDescription"> </ImageView>

        </RelativeLayout>

        <View
            android:id="@+id/listDivider4"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/headerAbout"
            tools:ignore="PxUsage"> </View>

        <RelativeLayout
            android:id="@+id/headerContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDivider4" >

            <ImageView
                android:id="@+id/contactIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_call"
                android:layout_marginStart="30dp"
                tools:ignore="ContentDescription"> </ImageView>

            <TextView
                android:id="@+id/contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Холбоо барих"
                android:textColor="@color/md_grey_700"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/contactIcon"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"> </TextView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/md_grey_800"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_appintro_arrow_forward_white"
                android:layout_marginEnd="30dp"
                tools:ignore="ContentDescription"> </ImageView>

        </RelativeLayout>

        <View
            android:id="@+id/listDivider5"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/headerContact"
            tools:ignore="PxUsage"> </View>

        <RelativeLayout
            android:id="@+id/headerLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listDivider5" >

            <ImageView
                android:id="@+id/logoutIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_exit"
                android:layout_marginStart="30dp"
                tools:ignore="ContentDescription"> </ImageView>

            <TextView
                android:id="@+id/logout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гарах"
                android:textColor="@color/md_grey_700"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/logoutIcon"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"> </TextView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/md_grey_800"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_appintro_arrow_forward_white"
                android:layout_marginEnd="30dp"
                tools:ignore="ContentDescription"> </ImageView>


        </RelativeLayout>



    </RelativeLayout>




</RelativeLayout>
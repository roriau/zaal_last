<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_white_1000"
    tools:context=".FragFour">

    <ImageView
        android:id="@+id/frag4logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/zaal_logo"
        android:layout_marginTop="30dp"
        android:padding="20dp"> </ImageView>

    <RelativeLayout
        android:id="@+id/loginLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag4logo">

    <RelativeLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="50dp">

    <ImageView
        android:id="@+id/usernamePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person"> </ImageView>

        <EditText
            android:id="@+id/usernameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/usernamePic"
            android:textColorHint="@color/md_grey_400"
            android:padding="10dp"
            android:textColor="@color/md_white_1000"
            android:hint="Нэр, И-мэйл, Утасны дугаар"
            android:layout_marginEnd="24dp"
            android:singleLine="true"
            android:background="@color/primary_dark"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry"> </EditText>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/loginLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginLayout"
        android:layout_marginTop="2dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">


    <ImageView
        android:id="@+id/passwordPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lock"> </ImageView>

        <EditText
            android:id="@+id/passwordEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/passwordPic"
            android:singleLine="true"
            android:textColor="@color/md_white_1000"
            android:layout_marginEnd="24dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@color/primary_dark"
            android:textColorHint="@color/md_grey_400"
            android:hint="Нууц үг"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlSymmetry"> </EditText>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нэвтрэх"
        android:gravity="center"
        android:textColor="@color/md_white_1000"
        android:layout_below="@+id/forgetPass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:backgroundTint="@color/primary_dark"
        app:icon="@drawable/ic_keyboard_hide"
        app:iconGravity="textStart"
        app:iconSize="18dp"
        tools:ignore="HardcodedText">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/createAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бүртгүүлэх"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:textColor="@color/md_grey_700"
        android:layout_below="@+id/loginLayout2"
        android:layout_marginStart="44dp"
        android:layout_marginTop="15dp"
        tools:ignore="HardcodedText"> </TextView>

    <TextView
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нууц үгээ мартсан уу?"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/md_grey_700"
        android:layout_below="@+id/loginLayout2"
        android:layout_marginEnd="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        tools:ignore="HardcodedText"> </TextView>

    <TextView
        android:id="@+id/versionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App version: 1.02"
        android:textColor="@color/md_grey_700"
        android:layout_below="@+id/loginButton"
        android:gravity="center"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText"> </TextView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"> </ProgressBar>

    <!-- LAYOUT 2 -->

    <RelativeLayout
        android:id="@+id/tuslahLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_below="@+id/frag4logo">

        <TextView
            android:id="@+id/phone_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Утасны дугаар:"
            android:textColor="@color/md_grey_700"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="И-Мэйл:"
            android:textColor="@color/md_grey_700"
            android:layout_below="@+id/phone_number_label"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нэр:"
            android:textColor="@color/md_grey_700"
            android:layout_below="@+id/email_label"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/created_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бүртгүүлсэн огноо:"
            android:textColor="@color/md_grey_700"
            android:layout_below="@+id/name_label"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <!--  TextView Start  -->

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_toEndOf="@+id/created_label"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_below="@+id/phone_number"
            android:layout_toEndOf="@+id/created_label"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_below="@+id/email"
            android:layout_toEndOf="@+id/created_label"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <TextView
            android:id="@+id/created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/created_label"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"> </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/created"
            android:layout_alignEnd="@+id/created"
            android:layout_alignStart="@+id/created_label"
            android:padding="10dp"
            android:text="Гарах"
            android:gravity="center"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText"
            android:backgroundTint="@color/primary_dark"
            app:icon="@drawable/ic_exit"
            app:iconSize="18dp"
            app:iconGravity="textStart"> </com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/versionTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_700"
            android:layout_centerHorizontal="true"
            android:layout_alignEnd="@+id/created"
            android:layout_alignStart="@+id/created_label"
            android:gravity="center"
            android:layout_below="@+id/logoutButton"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText"> </TextView>

    </RelativeLayout>




</RelativeLayout>